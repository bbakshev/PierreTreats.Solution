@{
  Layout = "_Layout";
}

@model PierreTreats.Models.Treat

<h2>Edit the treat for @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600; color:red;" })</p>
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  <p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
  @Html.LabelFor(model => model.Description)
  @Html.TextAreaFor(model => model.Description)

  <br><br>
  <input type="submit" value="Save"/>
}

  <span>@Html.ActionLink("Back to list", "Index")</span>